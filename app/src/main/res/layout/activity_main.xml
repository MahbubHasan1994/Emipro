<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FBCF9"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="85.13 Bangladeshi Taka"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/open_sans"
                    android:text="1, United States Dollar equals"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:layout_marginBottom="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Feb 11, 7:00 AM UTC - Disclaimer"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/frontal_curve">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="208dp">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="58dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:id="@+id/bankcal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/bank_cal1"/>

                            <TextView
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginTop="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/bankcal"
                                android:fontFamily="@font/poppins_medium"
                                android:text="EMI Calculate"
                                android:textColor="#036188"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bank_cal_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="58dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:id="@+id/equitycal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/bank_cal"/>

                            <TextView
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/equitycal"
                                android:layout_marginTop="9dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Bank Calculate"
                                android:textColor="#036188"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#F8F8F8"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="208dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="58dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:id="@+id/loancal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/loan"/>

                            <TextView
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/loancal"
                                android:layout_marginTop="9dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Loan Calculate"
                                android:textColor="#036188"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="58dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:id="@+id/extracal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/equity"
                                android:layout_centerInParent="true"/>

                            <TextView
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/extracal"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="9dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Equity Calculate"
                                android:textColor="#036188"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:background="#F8F8F8"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="VAT  &amp;  TAX Calculator"
                        android:textColor="#036188"
                        android:textSize="15sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>